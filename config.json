# This is an example on how to load the plugin in the config.json. It is NOT the complete config file of Pimatic!

"plugins": [
  {
    "plugin": "dewpoint"
  }
],

"devices": [
  {
    "id": "dew",
    "class": "DewPointDevice",
    "name": "Dew Point",
    "temperatureRef": "$homeduino-airclimate.temperature",
    "humidityRef": "$homeduino-airclimate.humidity",
    "windspeedRef": "$Weather.windspeed",
    "windUnits": "ms",
    "units": "metric"
  }
]
